---
const res = await fetch('https://zenquotes.io/api/random');
const data = await res.json();
const quote = data[0]; // Contains q (quote), a (author)
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Quote of the Day">
  <h1 class="text-2xl font-bold mb-4">Quote of the Day</h1>
  <blockquote class="text-xl italic mb-4">“{quote.q}”</blockquote>
  <p class="text-gray-600">— {quote.a ?? 'Unknown'}</p>
</BaseLayout>
